<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tx_detailSurat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Detail Surat"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dt_namaDosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nama Dosen"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/isi_namaDosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10sp"
            android:background="@drawable/kotak_form"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dt_namaMitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nama Mitra"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/isi_namaMitra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10sp"
            android:background="@drawable/kotak_form"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dt_alamatMitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Alamat Mitra"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/isi_alamatMitra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10sp"
            android:background="@drawable/kotak_form"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dt_tanggalPenggunaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tanggal Penggunaan"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/isi_tanggalPenggunaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10sp"
            android:background="@drawable/kotak_form"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dt_keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Keterangan"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/isi_keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10sp"
            android:background="@drawable/kotak_form"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Status"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/isi_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10sp"
            android:background="@drawable/kotak_form"
            android:textColor="@color/black"
            android:layout_marginEnd="5sp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tx_detailPengaju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10sp"
            android:text="Detail Pengaju"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tx_namaPengaju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nama Pengaju"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isi_namaPengaju"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10sp"
            android:background="@drawable/kotak_form"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tx_nimPengaju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nim Pengaju"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isi_nimPengaju"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10sp"
            android:background="@drawable/kotak_form"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>

</ScrollView>