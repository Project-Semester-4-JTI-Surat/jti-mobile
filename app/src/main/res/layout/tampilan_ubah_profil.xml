<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".TampilanUbahProfil">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIM"
        android:id="@+id/tampil_nim"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="-100dp"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:id="@+id/tv_nama"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"/>
        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/tampil_nama_user"
            android:background="@drawable/stroke_login"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodi"
            android:id="@+id/tv_prodi"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"/>
        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/tampil_prodi"
            android:background="@drawable/stroke_login"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Hp"
            android:id="@+id/tv_no_hp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"/>
        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/tampil_no_hp"
            android:background="@drawable/stroke_login"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:inputType="number|phone"
            android:textColor="@color/black"
            android:textColorHint="#a9a9a9"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:maxLength="13"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/tv_password"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/password"
            android:background="@drawable/stroke_login"
            android:drawablePadding="8dp"
            android:hint="Password"
            android:padding="8dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="8dp"
            android:drawableRight="@drawable/toggle_password"
            android:longClickable="false"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/loginButton"
            android:text="Simpan"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/PrimaryColor"
            android:textColor="@color/white"
            app:cornerRadius = "10dp"
            android:layout_gravity="end"/>
    </LinearLayout>


</LinearLayout>